<div class="buttons-wrapper">
	<a href="/" class="logo nosel"><i>min</i>Bin</a>
	<div class="buttons">
		<a href="/new" class="btn" id="newPaste" aria-label="New paste"><i class="fas fa-plus"></i></a>
		<% if (locals.saveable) {%>
		<button class="btn" type="submit" id="savePaste" aria-label="Save paste"><i class="fas fa-save"></i></button>
		<% } %>
		<% if (locals.id != null) {%>
		<a href="/<%= locals.id %>/new" class="btn" id="duplicatePaste" aria-label="Duplicate paste"><i class="fas fa-copy"></i></a>
		<a href="/<%= locals.id %>/raw" class="btn" id="viewRaw" aria-label="View raw"><i class="fas fa-code"></i></a>
		<% } %>
	</div>
	<% if (locals.saveable) {%>
		<div class="options">
			<label class="switch" id="encryptPaste" aria-label="Encrypt paste">
				<input type="checkbox" id="encrypt-input" name="encrypt">
				<span class="slider round" id="encrypt-slider"><i class="fas fa-lock"></i></span>
			</label>
			<label class="switch" id="burnPaste" aria-label="Burn after read">
				<input type="checkbox" id="burn-input" name="burn">
				<span class="slider round" id="burn-slider"><i class="fas fa-fire"></i></span>
			</label>
		</div>
	<% } %>
</div>
