{{!-- template-lint-disable block-indentation --}}
<div
  id="{{this.id}}"
  class="paste-form"
  {{did-resize this.handleResize}}
  {{did-update this.handleUpdate @paste}}
>
  <div
    id="{{this.id}}-lns"
    class="line-numbers no-select"
    {{did-insert this.renderLineNumbers}}
    {{did-update this.renderLineNumbers this.content}}
  ></div>

  {{#if this.isCreate}}
    {{!-- template-lint-disable no-autofocus-attribute --}}
    <textarea
      autofocus={{true}}
      id="{{this.id}}-content"
      class="paste-input {{@inputClass}}"
      spellcheck={{false}}
      value={{this.content}}
      {{on "input" this.handleInput}}
    ></textarea>
  {{else}}
    <code
      id="{{this.id}}-content"
      class="paste-display {{@inputClass}}"
      {{did-insert this.highlightCode}}
    >{{this.content}}</code>
  {{/if}}
</div>
