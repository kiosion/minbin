{{page-title "MinBin"}}

<AppWrapper>
  {{#if this.loader.isLoading}}
    <Loader />
  {{/if}}
  {{#if this.modal.isShowingModal}}
    <Modal />
  {{/if}}
  {{#if this.toast.isVisible}}
    <Toast
      @type={{this.toast.type}}
      @icon={{this.toast.icon}}
      @message={{this.toast.message}}
    />
  {{/if}}
  {{outlet}}
</AppWrapper>
