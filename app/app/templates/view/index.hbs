{{page-title this.paste.pasteId}}

<RouteWrapper>
  <Actions::Box
    @mode="show"
    @actions={{hash
      create=(action "create")
      duplicate=(action "duplicate")
      viewRaw=(action "viewRaw")
    }}
    @options={{hash
      encrypted=this.paste.encrypted
      burn=this.paste.burn
    }}
  />
  <Paste::Form
    @mode="show"
    @paste={{this.paste}}
  />
</RouteWrapper>
