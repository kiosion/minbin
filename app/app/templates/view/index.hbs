{{page-title this.paste.pasteId}}

<RouteWrapper>
  <Actions::Box
    @mode="show"
    @fns={{hash
      create=this.create
      duplicate=this.duplicate
      copy=this.copy
    }}
    @options={{hash
      encrypted=this.paste.encrypted
      burn=this.paste.burn
    }}
  />
  <Paste::Form
    @mode="show"
    @paste={{this.paste}}
  />
</RouteWrapper>
