{{page-title "New Paste"}}

<RouteWrapper>
  <Actions::Box
    @mode="create"
    @fns={{hash
      create=this.refresh
      save=this.save
      setEncrypted=(fn (mut this.model.encrypted))
      setBurn=(fn (mut this.model.burn))
    }}
    @options={{hash
      encrypted=this.model.encrypted
      burn=this.model.burn
    }}
  />
  <Paste::Form
    @mode="create"
    @paste={{this.model}}
  />
</RouteWrapper>
